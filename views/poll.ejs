<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>votingApp | Poll</title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body class="formBody">
    
    <nav class="navbar fixed-top navbar-toggleable-sm navbar-inverse bg-inverse">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/">votingApp</a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if (!user) { %>
             <li class="nav-item">
              <a class="nav-link" href="/signup">Sign up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Log in</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard<%= '/' + user.username %>">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log out</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <h1 class="display-5 text-center" id="pollTitle"><%= poll.title %></h1>
      <br />
      <form method="POST" action="/poll/<%= poll._id %>">
        <div class="form-group">
          <select class="form-control offset-sm-4 col-sm-4" name="vote">
            <% for (var i = 0; i < poll.labels.length; i++) { %>
              <option value="<%= i %>"><%= poll.labels[i] %></option>
            <% } %>
          </select>
          <br />
          <div class="btn-group-vertical offset-sm-4 col-sm-4" role="group" aria-label="group" id="group">
            <button type="submit" class="btn btn-primary" id="voteButton">Vote!</button>
            <a href="/poll/<%= poll._id %>/results" class="btn btn-success text-center">View Results!</a>
          </div>
        </div>
      </form>
    </div>

    <div class="footer bg-inverse">
      <div class="container">
        <div class="text-muted text-right">Â© 2017 Panagiotis Zisis</div>
      </div>
    </div>

    <script src="/bower_components/jquery/dist/jquery.slim.min.js"></script>
    <script src="/bower_components/tether/dist/js/tether.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>